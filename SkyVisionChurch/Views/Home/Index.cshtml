@{
    ViewData["Title"] = "Home Page";
    const int imageCount = 20;
}

<div id="carousel_index" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Image/Church2/Church.jpg">
            <div class="carousel-caption d-none d-md-block">
                <h5>하늘비젼교회</h5>
                <p>하늘 비젼교회에 오신 모든 분을 환영합니다.</p>
            </div>
        </div>

        @for (int i = 1; i < imageCount; i++)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Image/Church2/Church (@i).jpg">
            </div>
        }

        <a class="carousel-control-prev" href="#carousel_index" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next" href="#carousel_index" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>

        <ol class="carousel-indicators">
            <li data-target="#carousel_index" data-slide-to="0" class="active"></li>
            @for (int i = 1; i < imageCount; i++)
            {
                <li data-target="#carousel_index" data-slide-to="@i"></li>
            }
        </ol>
    </div>
</div>
